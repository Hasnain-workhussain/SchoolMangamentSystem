@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Symphony School Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#6366f1',
                        secondary: '#8b5cf6',
                        accent: '#ec4899',
                        dark: '#1e293b',
                        light: '#f8fafc'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">

    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="w-full max-w-md p-6 sm:p-8 space-y-6 bg-white rounded-2xl shadow-xl transition-all hover:shadow-2xl duration-300">
            <div class="text-center">
                <div class="flex justify-center mb-6">
                    <div class="w-20 h-20 rounded-full bg-gradient-to-r from-primary to-secondary flex items-center justify-center shadow-lg shadow-indigo-500/30">
                        <i data-feather="book-open" class="text-white w-10 h-10"></i>
                    </div>
                </div>
                <h2 class="text-3xl font-extrabold text-gray-900 tracking-tight">Symphony School</h2>
                <p class="mt-2 text-sm text-gray-600">Harmonizing education with technology</p>
            </div>

            <div class="mt-8 grid grid-cols-2 gap-4">

                <a href="@Url.Action("Login", "Account")" class="group relative flex flex-col items-center justify-center py-4 px-4 border border-transparent text-sm font-medium rounded-xl text-white bg-primary hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-200 shadow-md hover:-translate-y-1">
                    <i data-feather="lock" class="mb-2 w-6 h-6"></i>
                    <span>Admin Portal</span>
                </a>

                <a href="@Url.Action("Login", "Student")" class="group relative flex flex-col items-center justify-center py-4 px-4 border border-transparent text-sm font-medium rounded-xl text-white bg-secondary hover:bg-violet-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary transition-all duration-200 shadow-md hover:-translate-y-1">
                    <i data-feather="user" class="mb-2 w-6 h-6"></i>
                    <span>Student Portal</span>
                </a>

            </div>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-500">
                    Need help? <a href="#" class="font-medium text-primary hover:text-primary-500 hover:underline">Contact support</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        feather.replace();
    </script>
</body>
</html>