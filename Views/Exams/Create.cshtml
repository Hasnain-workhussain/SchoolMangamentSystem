@model SchoolMangamentSystem.ViewModels.Exam

@{
    ViewData["Title"] = "Add Exam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-md mx-auto py-8 px-4">
    <div class="mb-6 text-center">
        <h2 class="text-2xl font-bold text-indigo-400">Add New Exam</h2>
        <p class="text-slate-400 text-sm">Schedule a new assessment</p>
    </div>

    <div class="bg-slate-800 rounded-xl shadow-lg border border-slate-700 p-6">
        <form asp-action="Create" method="post" class="space-y-4">

            <div>
                <label asp-for="ExamName" class="block text-sm font-medium text-slate-300 mb-1">Exam Name</label>
                <input asp-for="ExamName" class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-indigo-500 focus:outline-none" placeholder="e.g. Midterm 2025" />
                <span asp-validation-for="ExamName" class="text-red-400 text-xs"></span>
            </div>

            <div>
                <label asp-for="ExamDate" class="block text-sm font-medium text-slate-300 mb-1">Date</label>
                <input asp-for="ExamDate" type="date" class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-indigo-500 focus:outline-none" />
                <span asp-validation-for="ExamDate" class="text-red-400 text-xs"></span>
            </div>

            <div>
                <label asp-for="CourseName" class="block text-sm font-medium text-slate-300 mb-1">Assign Course</label>
                <select asp-for="CourseName" class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-indigo-500 focus:outline-none">
                    <option value="">-- Select Course --</option>
                    @if (ViewBag.CourseList != null)
                    {
                        foreach (var course in ViewBag.CourseList)
                        {
                            <option value="@course">@course</option>
                        }
                    }
                </select>
                <span asp-validation-for="CourseName" class="text-red-400 text-xs"></span>
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <a asp-action="Index" class="px-4 py-2 rounded-lg bg-slate-700 hover:bg-slate-600 text-white text-sm transition-colors">Cancel</a>
                <button type="submit" class="px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium transition-colors shadow-lg shadow-indigo-500/20">
                    Save Exam
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => feather.replace());
    </script>
}