@model SchoolMangamentSystem.ViewModels.Student

@{
    Layout = null;
    var upcomingExams = ViewBag.UpcomingExams as IEnumerable<SchoolMangamentSystem.ViewModels.Exam>;
    var recentGrades = ViewBag.RecentGrades as IEnumerable<SchoolMangamentSystem.ViewModels.Grade>;
    var examCount = upcomingExams != null ? upcomingExams.Count() : 0;

    // Safety check for name
    var studentName = !string.IsNullOrEmpty(Model.FullName) ? Model.FullName : "Student";
    var studentInitial = studentName.Substring(0, 1).ToUpper();
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard | EduSymphony</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                fontFamily: { sans: ['Inter', 'sans-serif'] },
                extend: {
                    colors: {
                        slate: { 850: '#1e293b', 900: '#0f172a', 950: '#020617' },
                        indigo: { 400: '#818cf8', 500: '#6366f1', 600: '#4f46e5' }
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .glass-card {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
    </style>
</head>

<body class="bg-slate-950 text-slate-200 min-h-screen flex flex-col selection:bg-indigo-500 selection:text-white">

    <nav class="bg-slate-900/80 backdrop-blur-md sticky top-0 z-50 border-b border-slate-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-20">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/20">
                        <i data-feather="book-open" class="text-white w-5 h-5"></i>
                    </div>
                    <span class="font-bold text-xl tracking-tight text-white">EduSymphony</span>
                </div>

                <div class="flex items-center space-x-6">
                    <span class="hidden md:block text-xs font-medium px-3 py-1.5 bg-slate-800 text-indigo-400 rounded-full border border-indigo-500/20">
                        @Model.CourseName Student
                    </span>

                    <div class="relative group">
                        <button class="flex items-center space-x-3 focus:outline-none transition-opacity hover:opacity-80">
                            <div class="text-right hidden md:block">
                                <p class="text-sm font-semibold text-white">@studentName</p>
                                <p class="text-xs text-slate-400">@Model.Email</p>
                            </div>
                            <div class="w-10 h-10 rounded-full bg-slate-700 border-2 border-slate-600 flex items-center justify-center text-white font-bold shadow-md">
                                @studentInitial
                            </div>
                        </button>

                        <div class="absolute right-0 mt-4 w-48 bg-slate-800 rounded-xl shadow-xl py-2 z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border border-slate-700 transform origin-top-right">
                            <a href="@Url.Action("Logout", "Student")" class="flex items-center px-4 py-3 text-sm text-red-400 hover:bg-slate-700 transition-colors">
                                <i data-feather="log-out" class="w-4 h-4 mr-2"></i> Sign out
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-4 py-10 flex-grow max-w-7xl">

        <div class="flex flex-col md:flex-row justify-between items-end mb-10 gap-4">
            <div>
                <h1 class="text-4xl font-bold text-white mb-2">Student Dashboard</h1>
                <p class="text-slate-400">Welcome back, <span class="text-indigo-400 font-semibold">@studentName</span>. Here's your overview.</p>
            </div>
            <div class="text-sm text-slate-500 bg-slate-900/50 px-4 py-2 rounded-lg border border-slate-800">
                @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">

            <div class="glass-card rounded-2xl p-6 relative overflow-hidden group hover:bg-slate-800/80 transition-all duration-300">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <i data-feather="calendar" class="w-16 h-16 text-indigo-400"></i>
                </div>
                <p class="text-slate-400 text-sm font-medium mb-1">Attendance</p>
                <h3 class="text-3xl font-bold text-white mb-4">92%</h3>
                <div class="w-full bg-slate-700 rounded-full h-1.5">
                    <div class="bg-indigo-500 h-1.5 rounded-full shadow-[0_0_10px_rgba(99,102,241,0.5)]" style="width: 92%"></div>
                </div>
            </div>

            <div class="glass-card rounded-2xl p-6 relative overflow-hidden group hover:bg-slate-800/80 transition-all duration-300">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <i data-feather="award" class="w-16 h-16 text-purple-400"></i>
                </div>
                <p class="text-slate-400 text-sm font-medium mb-1">Current GPA</p>
                <h3 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-2">
                    @ViewBag.OverallGPA
                </h3>
                <p class="text-xs text-slate-500">Current Semester</p>
            </div>

            <div class="glass-card rounded-2xl p-6 relative overflow-hidden group hover:bg-slate-800/80 transition-all duration-300">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <i data-feather="clock" class="w-16 h-16 text-emerald-400"></i>
                </div>
                <p class="text-slate-400 text-sm font-medium mb-1">Upcoming Exams</p>
                <h3 class="text-3xl font-bold text-white mb-2">@examCount</h3>
                <p class="text-xs text-emerald-400 flex items-center">
                    <span class="w-2 h-2 rounded-full bg-emerald-500 mr-2 animate-pulse"></span>
                    @Model.CourseName
                </p>
            </div>

            <div class="glass-card rounded-2xl p-6 relative overflow-hidden group hover:bg-slate-800/80 transition-all duration-300">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <i data-feather="file-text" class="w-16 h-16 text-amber-400"></i>
                </div>
                <p class="text-slate-400 text-sm font-medium mb-1">Assignments</p>
                <h3 class="text-3xl font-bold text-white mb-2">2</h3>
                <p class="text-xs text-amber-400">Due this week</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">

            <div class="glass-card rounded-2xl p-6 border-t-4 border-t-purple-500">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-white flex items-center">
                        <i data-feather="bar-chart-2" class="w-5 h-5 mr-2 text-purple-400"></i>
                        Recent Results
                    </h2>
                </div>

                <div class="space-y-3">
                    @if (recentGrades != null && recentGrades.Any())
                    {
                        @foreach (var grade in recentGrades)
                        {
                            <div class="flex items-center justify-between p-4 bg-slate-800/50 rounded-xl hover:bg-slate-800 transition-colors border border-slate-700/50">
                                <div class="flex items-center space-x-4">
                                    <div class="w-10 h-10 bg-purple-500/10 rounded-lg flex items-center justify-center text-purple-400 font-bold border border-purple-500/20">
                                        @grade.CourseName.Substring(0, 1)
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-white">@grade.CourseName</h4>
                                        <p class="text-xs text-slate-400">Final Grade</p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-xl font-bold text-white">@grade.GPA</div>
                                    <div class="text-xs text-purple-400">GPA</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-10 text-slate-500 bg-slate-900/30 rounded-xl border border-dashed border-slate-700">
                            <p>No grades available yet.</p>
                        </div>
                    }
                </div>
            </div>

            <div class="glass-card rounded-2xl p-6 border-t-4 border-t-emerald-500">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-white flex items-center">
                        <i data-feather="calendar" class="w-5 h-5 mr-2 text-emerald-400"></i>
                        Exam Schedule
                    </h2>
                </div>

                <div class="space-y-3">
                    @if (upcomingExams != null && upcomingExams.Any())
                    {
                        @foreach (var exam in upcomingExams)
                        {
                            <div class="flex items-center justify-between p-4 bg-slate-800/50 rounded-xl hover:bg-slate-800 transition-colors border border-slate-700/50">
                                <div class="flex items-center space-x-4">
                                    <div class="flex flex-col items-center justify-center bg-slate-900 rounded-lg w-12 h-12 border border-slate-700">
                                        <span class="text-[10px] text-slate-500 uppercase">@exam.ExamDate.ToString("MMM")</span>
                                        <span class="text-lg font-bold text-white">@exam.ExamDate.Day</span>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-white">@exam.ExamName</h4>
                                        <div class="flex items-center text-xs text-slate-400 mt-1">
                                            <i data-feather="book" class="w-3 h-3 mr-1"></i> @Model.CourseName
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <span class="px-2 py-1 bg-emerald-500/10 text-emerald-400 text-xs rounded border border-emerald-500/20">Upcoming</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-10 text-slate-500 bg-slate-900/30 rounded-xl border border-dashed border-slate-700">
                            <p>No upcoming exams.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <section class="glass-card rounded-2xl p-6 border-t-4 border-t-indigo-500">
            <h2 class="text-xl font-bold text-white mb-6">Attendance Overview</h2>
            <div class="w-full h-80">
                <canvas id="attendanceChart"></canvas>
            </div>
        </section>

    </main>

    <script>
        feather.replace();

        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('attendanceChart').getContext('2d');

            // Create Gradient
            let gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(99, 102, 241, 0.5)'); // Indigo
            gradient.addColorStop(1, 'rgba(99, 102, 241, 0.0)');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Attendance',
                        data: [85, 88, 90, 92, 91, 93, 94, 92, 91, 93, 94, 95],
                        borderColor: '#6366f1',
                        backgroundColor: gradient,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#1e293b',
                        pointBorderColor: '#6366f1',
                        pointBorderWidth: 2,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 80,
                            max: 100,
                            grid: { color: 'rgba(255,255,255,0.05)' },
                            ticks: { color: '#94a3b8' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#94a3b8' }
                        }
                    },
                    interaction: { mode: 'nearest', axis: 'x', intersect: false }
                }
            });
        });
    </script>
</body>
</html>