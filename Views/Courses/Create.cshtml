@model SchoolMangamentSystem.ViewModels.Course

@{
    ViewData["Title"] = "Add New Course";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-white">Add New Course</h2>
        <p class="text-slate-400 mt-2">Create a new course card with an image.</p>
    </div>

    <div class="bg-slate-800 rounded-xl shadow-lg border border-slate-700 p-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-6">

            <div>
                <label asp-for="CourseName" class="block text-sm font-medium text-slate-300 mb-2">Course Name</label>
                <input asp-for="CourseName" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-2.5 text-white focus:outline-none focus:border-indigo-500" placeholder="e.g. Computer Science" />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Category" class="block text-sm font-medium text-slate-300 mb-2">Category</label>
                    <select asp-for="Category" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-2.5 text-white focus:outline-none focus:border-indigo-500">
                        <option value="Computer Science">Computer Science</option>
                        <option value="Mathematics">Mathematics</option>
                        <option value="Science">Science</option>
                        <option value="Business">Business</option>
                        <option value="Art">Art</option>
                    </select>
                </div>
                <div>
                    <label asp-for="Price" class="block text-sm font-medium text-slate-300 mb-2">Price ($)</label>
                    <input asp-for="Price" type="number" step="0.01" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-2.5 text-white focus:outline-none focus:border-indigo-500" placeholder="49.99" />
                </div>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-slate-300 mb-2">Description</label>
                <textarea asp-for="Description" rows="3" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-2.5 text-white focus:outline-none focus:border-indigo-500"></textarea>
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Course Thumbnail</label>
                <div class="flex items-center justify-center w-full">
                    <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-32 border-2 border-slate-600 border-dashed rounded-lg cursor-pointer bg-slate-900 hover:bg-slate-800 transition-colors">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <i data-feather="upload-cloud" class="w-8 h-8 text-slate-400 mb-2"></i>
                            <p class="text-sm text-slate-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                            <p class="text-xs text-slate-500">SVG, PNG, JPG (MAX. 2MB)</p>
                        </div>
                        <input id="dropzone-file" name="imageFile" type="file" class="hidden" accept="image/*" />
                    </label>
                </div>
            </div>

            <div class="flex justify-end pt-4">
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2.5 rounded-lg font-medium shadow-lg transition-all flex items-center gap-2">
                    <i data-feather="plus" class="w-4 h-4"></i>
                    Create Course
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => feather.replace());
    </script>
}