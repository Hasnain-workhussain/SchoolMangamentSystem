@model IEnumerable<SchoolMangamentSystem.ViewModels.Student>

@{
    ViewData["Title"] = "Student Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <h1 class="text-3xl font-bold text-indigo-400">Student Management</h1>
        <div class="flex space-x-4">
            <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition shadow-lg shadow-indigo-500/20">
                <i data-feather="plus" class="w-4 h-4"></i>
                <span>Add Student</span>
            </a>
        </div>
    </div>

    <div class="bg-slate-800 rounded-xl shadow-lg p-6 mb-6 border border-slate-700">
        <form asp-action="Index" method="get" class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">

            <div class="relative w-full md:w-64">
                <i data-feather="search" class="absolute left-3 top-3 text-slate-400 w-4 h-4"></i>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       placeholder="Search name or email..."
                       class="w-full pl-10 pr-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-slate-100 placeholder-slate-400 outline-none transition-all">
            </div>

            <div class="flex gap-2 w-full md:w-auto">
                <select name="courseFilter" class="w-full md:w-48 px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-slate-100 outline-none transition-all">
                    <option value="">All Courses</option>
                    @* UPDATED LIST TO MATCH CREATE/EDIT VIEWS *@
                    @foreach (var course in new[] { "Computer Science", "Mathematics", "Arts",  "Biology", "Business", })
                    {
                        if (ViewData["CurrentCourse"]?.ToString() == course)
                        {
                            <option value="@course" selected>@course</option>
                        }
                        else
                        {
                            <option value="@course">@course</option>
                        }
                    }
                </select>

                <button type="submit" class="bg-slate-700 hover:bg-slate-600 text-white px-4 py-2 rounded-lg border border-slate-600 transition-colors">
                    Filter
                </button>
            </div>
        </form>

        <div class="overflow-x-auto mt-6">
            <table class="w-full text-left text-slate-300">
                <thead class="border-b border-slate-700 text-slate-400 uppercase text-xs tracking-wider">
                    <tr>
                        <th class="pb-3 font-medium">Student Name</th>
                        <th class="pb-3 font-medium">Email</th>
                        <th class="pb-3 font-medium">Enrolled Course</th>
                        <th class="pb-3 font-medium">Status</th>
                        <th class="pb-3 font-medium text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="py-8 text-center text-slate-500">
                                No students found matching your criteria.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var student in Model)
                        {
                            <tr class="hover:bg-slate-700/30 transition-colors group">
                                <td class="py-4 font-medium text-white flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center text-xs font-bold">
                                        @if (!string.IsNullOrEmpty(student.FullName))
                                        {
                                            @student.FullName.Substring(0, 1).ToUpper()
                                        }
                                        else
                                        {
                                            <span>?</span>
                                        }
                                    </div>
                                    @student.FullName
                                </td>

                                <td class="py-4">@student.Email</td>

                                <td class="py-4">
                                    <span class="bg-slate-700 px-2 py-1 rounded text-xs text-slate-300 border border-slate-600">
                                        @student.CourseName
                                    </span>
                                </td>

                                <td class="py-4">
                                    @if (student.Status == "Active")
                                    {
                                        <span class="text-green-400 text-xs px-2 py-1 rounded-full bg-green-400/10 border border-green-400/20">Active</span>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400 text-xs px-2 py-1 rounded-full bg-slate-400/10 border border-slate-400/20">@student.Status</span>
                                    }
                                </td>

                                <td class="py-4 text-right">
                                    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                        <a asp-action="Edit" asp-route-id="@student.Id" class="p-1.5 hover:bg-indigo-500/20 hover:text-indigo-400 rounded transition-colors" title="Edit">
                                            <i data-feather="edit-2" class="w-4 h-4"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@student.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this student?');" style="display:inline;">
                                            <button type="submit" class="p-1.5 hover:bg-red-500/20 hover:text-red-400 rounded transition-colors" title="Delete">
                                                <i data-feather="trash-2" class="w-4 h-4"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            feather.replace();
        });
    </script>
}