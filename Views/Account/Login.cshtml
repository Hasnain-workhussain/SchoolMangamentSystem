@model SchoolMangamentSystem.ViewModels.LoginViewModel

@{
    Layout = null; // No sidebar/header for login page
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Login | EduSync Nexus</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

    <style>
        body {
            color: #e6eef8;
            background: #0f172a;
        }

        .login-container {
            height: 100vh;
            height: 100dvh;
            display: grid;
            place-items: center;
        }

        .login-card {
            width: 100%;
            max-width: 28rem;
            background: #1e293b;
            border-radius: 1rem;
            border: 1px solid rgba(255,255,255,.05);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            padding: 2.5rem;
        }

        .form-input {
            background: #0f172a;
            border: 1px solid rgba(255,255,255,.1);
            color: #e6eef8;
            transition: all .15s ease;
        }

            .form-input:focus {
                border-color: #6366f1;
                box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
                outline: none;
            }

        .btn-primary {
            background: #6366f1;
            transition: all .15s ease;
        }

            .btn-primary:hover {
                background: #4f46e5;
            }

        .login-footer {
            color: #94a3b8;
            font-size: .875rem;
        }

            .login-footer a {
                color: #818cf8;
                text-decoration: none;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container px-4 sm:px-6 lg:px-8">
        <div class="login-card">

            <div class="text-center mb-8">
                <div class="flex justify-center mb-4">
                    <div class="flex items-center gap-2 font-bold text-xl">
                        <span class="flex items-center justify-center w-8 h-8 rounded-lg bg-indigo-500 text-white text-xs">EN</span>
                        <span>EduSymphony</span>
                    </div>
                </div>
                <h1 class="text-2xl font-bold mb-2">Admin Dashboard</h1>
                <p class="text-slate-400">Sign in to access your account</p>
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="mb-4 p-3 bg-red-500/10 border border-red-500/20 rounded-md text-red-400 text-sm text-center">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-controller="Account" asp-action="Login" method="post" class="space-y-6">

                <div>
                    <label asp-for="Email" class="block text-sm font-medium mb-1">Email</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i data-feather="mail" class="text-slate-400 w-4 h-4"></i>
                        </div>
                        <input asp-for="Email" type="email" required
                               class="form-input pl-10 w-full py-2 px-3 rounded-md"
                               placeholder="demo@example.com">
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium mb-1">Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i data-feather="lock" class="text-slate-400 w-4 h-4"></i>
                        </div>
                        <input asp-for="Password" type="password" required
                               class="form-input pl-10 w-full py-2 px-3 rounded-md"
                               placeholder="••••••••">
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" type="checkbox"
                               class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded bg-slate-800 border-slate-600">
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-slate-300">
                            Remember me
                        </label>
                    </div>

                    <div class="text-sm">
                        <a href="#" class="font-medium text-indigo-400 hover:text-indigo-300">
                            Forgot password?
                        </a>
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn-primary w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Sign in
                    </button>
                </div>
            </form>

            <div class="mt-6 login-footer">
                <p class="text-center">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" class="font-medium text-indigo-400 hover:text-indigo-300 transition-colors">
                        Create an account
                    </a>
                </p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            feather.replace();
        });
    </script>
</body>
</html>