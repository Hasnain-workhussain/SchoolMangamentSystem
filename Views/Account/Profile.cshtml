@model SchoolMangamentSystem.ViewModels.Admin

@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="grid gap-8 md:grid-cols-3">

    <div class="md:col-span-1">
        <div class="bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-700">
            <div class="flex flex-col items-center">
                <div class="relative mb-4">
                    <div id="profileAvatar" class="w-24 h-24 rounded-full bg-indigo-600 flex items-center justify-center text-3xl font-bold text-white shadow-lg overflow-hidden bg-cover bg-center">
                        @Model.FullName.Substring(0, 1)
                    </div>

                    <input type="file" id="avatarUpload" name="file" accept="image/*" class="hidden">

                    <button id="changeAvatarBtn" type="button" class="absolute bottom-0 right-0 bg-slate-700 hover:bg-slate-600 rounded-full p-2 border-2 border-slate-800 transition-colors text-white">
                        <i data-feather="camera" class="w-4 h-4"></i>
                    </button>
                </div>

                <h2 class="text-xl font-semibold text-white">@Model.FullName</h2>
                <p class="text-slate-400 text-sm mt-1">@Model.Role</p>
            </div>
        </div>
    </div>

    <div class="md:col-span-2">
        <div class="bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-700">
            <h2 class="text-lg font-semibold text-white mb-6">Profile Settings</h2>

            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="mb-4 p-3 bg-green-500/10 border border-green-500/20 rounded-lg text-green-400 text-sm flex items-center gap-2">
                    <i data-feather="check-circle" class="w-4 h-4"></i> @ViewData["SuccessMessage"]
                </div>
            }
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="mb-4 p-3 bg-red-500/10 border border-red-500/20 rounded-lg text-red-400 text-sm flex items-center gap-2">
                    <i data-feather="alert-circle" class="w-4 h-4"></i> @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-action="UpdateProfile" method="post" class="space-y-6" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Password" /> <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-slate-300 mb-1">Full Name</label>
                    <input asp-for="FullName" class="w-full px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-indigo-500 transition-colors" />
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-300 mb-1">Email</label>
                    <input asp-for="Email" type="email" class="w-full px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-indigo-500 transition-colors" />
                </div>

                <div class="pt-4 border-t border-slate-700">
                    <h3 class="text-sm font-medium text-slate-300 mb-4">Change Password</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-1">New Password</label>
                            <input name="NewPassword" type="password" class="w-full px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-indigo-500 transition-colors" placeholder="Leave blank to keep current password">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-1">Confirm Password</label>
                            <input name="ConfirmPassword" type="password" class="w-full px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-indigo-500 transition-colors">
                        </div>
                    </div>
                </div>

                <div class="flex justify-end pt-4">
                    <button type="submit" class="px-6 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white font-medium shadow-lg shadow-indigo-500/20 transition-all">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Profile Image Logic (Local Storage Preview)
            const avatarUpload = document.getElementById('avatarUpload');
            const changeAvatarBtn = document.getElementById('changeAvatarBtn');
            const profileAvatar = document.getElementById('profileAvatar');

            // Load saved image
            const savedImage = localStorage.getItem('profileImage');
            if (savedImage) {
                profileAvatar.style.backgroundImage = `url(${savedImage})`;
                profileAvatar.innerText = '';
            }

            // Handle Click
            changeAvatarBtn.addEventListener('click', () => avatarUpload.click());

            // Handle File Change
            avatarUpload.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        localStorage.setItem('profileImage', event.target.result);
                        profileAvatar.style.backgroundImage = `url(${event.target.result})`;
                        profileAvatar.innerText = '';
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}